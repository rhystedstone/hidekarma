{
    "name": "Hide Reddit Karma",
    "short_name": "Hide Karma",
    "description": "Hide Karma on Reddit.com",
    "version": "1.1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://*.reddit.com/*"
            ],
            "css": [
                "/resource/css/overrides.css"
            ]
        }
    ],
    "action": {
        "default_popup": "/resource/html/popup.html",
        "default_icon": {
            "16": "/resource/image/icon/icon16.png",
            "32": "/resource/image/icon/icon32.png",
            "48": "/resource/image/icon/icon48.png",
            "128": "/resource/image/icon/icon128.png",
            "280": "/resource/image/icon/icon280.png"
        }
    },
    "icons": {
        "16": "/resource/image/icon/icon16.png",
        "32": "/resource/image/icon/icon32.png",
        "48": "/resource/image/icon/icon48.png",
        "128": "/resource/image/icon/icon128.png",
        "280": "/resource/image/icon/icon280.png"
    }
}